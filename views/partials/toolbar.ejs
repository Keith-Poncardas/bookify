<div class="d-flex justify-content-between align-items-center my-3">
  <small class="text-muted"><strong><%= title || 'Book Listings' %></strong></small>

  <div class="<%= isDropdownHidden ? 'd-none' : '' %>">
    <div class="btn-group mx-1">
      <button type="button" class="btn bg-body-tertiary dropdown-toggle btn-sm rounded-3 border-0 shadow-sm" data-bs-toggle="dropdown" aria-expanded="false">
        Sort
      </button>
      <ul class="dropdown-menu">
        <% SortOptions.forEach(option => { %>
        <li><a class="dropdown-item" href="/book?sortBy=<%= option %>"><%= option %></a></li>
        <% }) %>
      </ul>
    </div>
    <div class="btn-group">
      <button type="button" class="btn bg-body-tertiary dropdown-toggle btn-sm rounded-3 border-0 shadow-sm" data-bs-toggle="dropdown" aria-expanded="false">
        Filter
      </button>
      <ul class="dropdown-menu">
        <% BookGenres.forEach(genre => { %>
        <li><a class="dropdown-item" href="/book?filterBy=<%= genre %>"><%= genre %></a></li>
        <% }) %>
      </ul>
    </div>
  </div>

</div>