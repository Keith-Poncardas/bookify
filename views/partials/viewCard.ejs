<div class="row gap-2 bg-body-tertiary p-4 rounded-4 shadow-sm m-1">
  <div class="col-md-4 d-flex justify-content-center align-items-center">

    <div class="carousel-container">
      <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner rounded-3">

          <% book.posterImages.forEach(image => { %>

          <div class="carousel-item active">
            <img src="<%= image %>" class="d-block shadow" alt="...">
          </div>

          <% }) %>

        </div>

        <% if (book.posterImages.length > 1) { %>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>

        <% } %>

      </div>
    </div>


  </div>
  <div class="col-md mt-2">
    <div>

      <!-- Title / Subtitle -->
      <div class="text-center text-md-start text-lg-start">
        <h1 class="card-title h2"><%= book.title %></h1>
        <h6 class="card-subtitle mb-2 text-muted">Author <%= book.author %></h6>
      </div>

      <!-- Rating -->
      <div class="d-flex align-items-center mt-3">
        <div class="me-2">
          <i class="fas fa-star text-warning"></i>
        </div>
        <small class="text-muted"><%= book.rating %></small>
      </div>

      <div class="mt-4 gap-1 d-flex flex-column">

        <!-- Genre -->
        <div>
          <p class="h6 m-0"><i class="fa-solid fa-user me-1"></i> Genre</p>
          <p class="text-muted small"><%= book.genre %></p>
        </div>

        <!-- Country -->
        <div>
          <p class="h6 m-0"><i class="fa-solid fa-location-dot me-1"></i> Country</p>
          <p class="text-muted small"><%= book.city %>, <%= book.country %></p>
        </div>

        <!-- Country -->
        <div>
          <p class="h6 m-0"><i class="fa-solid fa-calendar-days me-1"></i> Published</p>
          <p class="text-muted small"><%= book.yearPublished %></p>
        </div>

        <!-- Language -->
        <div>
          <p class="h6 m-0"><i class="fa-solid fa-globe me-1"></i> Language</p>
          <p class="text-muted small"><%= book.languages %></p>
        </div>

        <!-- Pages -->
        <div>
          <p class="h6 m-0"><i class="fa-solid fa-file me-1"></i> Pages</p>
          <p class="text-muted small"><%= book.bookPage %></p>
        </div>

        <!-- Description -->
        <div>
          <p class="h6 m-0"><i class="fa-solid fa-comment me-1"></i> Description</p>
          <p class="text-muted small"><%= book.description %></p>
        </div>

        <!-- Button -->
        <div>
          <a href="<%= book.buyLink %>" target="_blank" class="btn btn-primary shadow-sm">Buy this book</a>
        </div>

      </div>

    </div>
  </div>
</div>