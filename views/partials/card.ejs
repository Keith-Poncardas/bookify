<div class="col" style="cursor: pointer;" onclick="window.location = '/book/<%= book._id %>/view?bookGenre=<%= book.genre %>'">
  <div class="card h-100 rounded-4 border-0 bg-body-tertiary shadow-sm p-2">
    <img src="<%= book.posterImages %>" class="card-img-top rounded-4 shadow-sm" alt="<%= books.title %> poster" style="width: 100%; height: 300px; object-fit: cover;">
    <div class="card-body">
      <h5 class="card-title text-truncate"><%= book.title %></h5>
      <div class="d-flex flex-wrap gap-2 text-muted">
        <p class="card-text mb-0"><%= book.genre %></p>
        <p class="card-text mb-0">â€¢</p>
        <p class="card-text mb-0"><%= book.yearPublished  %></p>
      </div>
      <div class="d-flex align-items-center mt-2">
        <div class="me-2">
          <i class="fas fa-star text-warning"></i>
        </div>
        <small class="text-muted"><%= book.rating %></small>
      </div>
    </div>
  </div>
</div>